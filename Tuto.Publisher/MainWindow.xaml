<Window x:Class="Tuto.Publisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:y="clr-namespace:Tuto.Publisher"
        Title="Window1" 
        Height="300" 
        Width="300"
        >

    <StackPanel>
        <y:TextBoxOnRequire IsEnabled="{Binding IsChecked, ElementName=uiIsEnabled}"
                 />

        <ToggleButton x:Name="uiIsEnabled" Content="Enable" IsChecked="True" />
    </StackPanel>
</Window>
